<html>
  <%- include('head', { title }) %>
  <link rel="stylesheet" href="messages.css" />
  <body>
    <h1><%= title %></h1>
    <ul class="messages" role="list">
      <% messages.forEach(message => { %>
      <%- include('message', { message, showMessageLinks }) %>
      <% }); %>
    </ul>
    <% if (showMessageLinks) { %>
    <a class="styled" href="/new">new message</a>
    <% } %>
  </body>
</html>
